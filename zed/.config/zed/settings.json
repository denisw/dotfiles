// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "tab_bar": {
    "show": true,
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Catppuccin Mocha",
  },
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 12.0,
  "ui_font_size": 14.0,
  "wrap_guides": [80],
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "never",
    "use_smartcase_find": true,
  },
  "tab_size": 2,
  "project_panel": {
    "auto_fold_dirs": true,
  },
  "agent": {
    "enabled": false,
  },
  "edit_predictions": {
    "mode": "subtle",
  },
  "terminal": {
    "option_as_meta": true,
    "detect_venv": {
      "on": {
        "activate_script": "fish",
      },
    },
  },
  "languages": {
    "Go": {
      "tab_size": 4,
      "hard_tabs": true,
    },
    "Java": {
      "tab_size": 4,
    },
    "JavaScript": {
      "tab_size": 2,
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "node_modules/.bin/prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"],
        },
      },
    },
    "HTML": {
      "format_on_save": "off",
    },
    "PHP": {
      "tab_size": 4,
    },
    "Python": {
      "tab_size": 4,
      "format_on_save": "on",
      "language_servers": [
        "basedpyright",
        "ruff",
        "!pyright",
        "!pyrefly",
        "!ty",
      ],
      "formatter": {
        "language_server": {
          "name": "ruff",
        },
      },
    },
    "Ruby": {
      "language_servers": ["ruby-lsp", "rubocop", "!solargraph"],
    },
    "Rust": {
      "tab_size": 4,
      "format_on_save": "on",
      "wrap_guides": [100],
    },
    "TypeScript": {
      "tab_size": 2,
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "node_modules/.bin/prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"],
        },
      },
    },
    "TOML": {
      "tab_size": 4,
    },
  },
}
